<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PetArmy.Views.TabbedPageTest"
            xmlns:local="clr-namespace:PetArmy.Views"
            xmlns:android="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core"
            android:TabbedPage.ToolbarPlacement="Bottom"
            BarBackgroundColor="{StaticResource Flirt}"
            SelectedTabColor="{StaticResource Primary}"
            UnselectedTabColor="White"
            >
    <!--Pages can be added as references or inline-->
    <local:AboutPage IconImageSource="PetsArmy.png"/>
    <ContentPage Title="Tab 2" IconImageSource="PetsArmy.png" BackgroundColor="Pink"/>
    <ContentPage Title="Tab 3" IconImageSource="PetsArmy.png" BackgroundColor="Red"/>
</TabbedPage>