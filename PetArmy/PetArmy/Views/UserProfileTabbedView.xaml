<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="PetArmy.Views.UserProfileTabbedView"
            xmlns:local="clr-namespace:PetArmy.Views"
            xmlns:android="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core"
            android:TabbedPage.ToolbarPlacement="Bottom"
            BarBackgroundColor="{StaticResource Flirt}"
            SelectedTabColor="{StaticResource Primary}"
            UnselectedTabColor="White"
            BindingContext="{Binding Main, Source={StaticResource Locator}}">
   
            <local:UserGeneralInfoView  Title="General" IconImageSource="PetsArmy.png"/>
            <local:UserPreferencesView  IconImageSource="PetsArmy.png" Title="Preferences"/>

</TabbedPage>